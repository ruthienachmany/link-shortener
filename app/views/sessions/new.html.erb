

<div class="container-fluid-full">
  <div class="row-fluid">        
    <div class="row-fluid">
      <div class="login-box">
        
      <%= form_tag sessions_path do %>

      <div class="form-horizontal">

        <h1>Log In</h1>
        <hr>

        <fieldset>

        <p>
            <%= label_tag :email %>
            <%= text_field_tag :email, params[:email], :class => "input-large span12" %>
        </p>

        <div class="clearfix"></div>

        <p>
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, :class => "input-large span12" %>
        </p>

        <div class="clearfix"></div>

        <p>
          <div class="actions">
            <%= submit_tag "Log In", :class => "btn btn-primary span12" %>
          </div>
        </p>

        </fieldset>

      </div>

<% end %>

      </div>
    </div>
  </div>
</div>